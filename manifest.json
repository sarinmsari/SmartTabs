{
  "manifest_version": 3,
  "name": "Smart Auto Tab Grouper",
  "version": "1.0",
  "description": "Automatically groups tabs based on URL or domain.",
  "permissions": ["tabs", "tabGroups", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Auto Tab Grouper"
  },
  "host_permissions": ["<all_urls>"]
}
