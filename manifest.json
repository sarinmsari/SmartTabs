{
  "manifest_version": 3,
  "name": "TabFlow - Auto Tab Grouping",
  "version": "1.2.2",
  "description": "TabFlow auto-organizes Chrome tabs into groups. Declutter your browser, cut tab chaos, and boost focus with smart tab management.",
  "permissions": ["tabs", "tabGroups", "storage", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Auto Tab Grouper"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
